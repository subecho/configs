{
	// Place this in the following directory depending on OS:
	// Fedora: ~/.config/Code/User/snippets/
	"Docs URL Insert": {
		"prefix": "docurl",
		"body": "http://kotlinlang.org/docs/reference/${1:chapter}.html#${2:section}",
		"description": "Easily add a link to a relevant place in the Kotlin docs",
	},
	"Create Data Class": {
		"prefix": "dclass",
		"body": "data class ${1:name}($0)",
		"description": "Create a data class.",
	},
	"Proper Try Catch": {
		"prefix": "try",
		"body": [
			"try {",
			"\t$1",
			"}",
			"catch(${2:Exception} e) {",
			"\t$3",
			"}",
		],
		"description": "Create a try-catch block."
	},
	"Create a Function": {
		"prefix": "fun",
		"body": [
			"fun ${1:name}(${2:args}): ${3:return_type} {",
			"\t$0",
			"}",
		],
		"description": 
			"Create a function with an arbitrary number of parameters.",
	},

}